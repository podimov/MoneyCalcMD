                android:width="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutGbp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
